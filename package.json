{
  "name": "ochi",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:rollup": "rollup -c -w",
    "dev:routify": "routify",
    "build": "routify -b && rollup -c",
    "start": "sirv public --single --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "format": "prettier --write '**/*.{svelte,ts}'",
    "generate": "npx ts-node -P tsconfig.generate.json ./scripts/generate.ts && npm run format",
    "generate-check": "npm run generate && git diff --quiet"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@chevrotain/types": "^10.5.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@roxi/routify": "^2.18.12",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^5.2.9",
    "@tsconfig/node18": "^18.2.6",
    "@tsconfig/svelte": "^5.0.6",
    "@types/jest": "^27.5.1",
    "babel-jest": "^28.1.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3",
    "rollup": "^2.79.2",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.2.3",
    "svelte": "^5.43.14",
    "svelte-check": "^4.3.4",
    "svelte-copy": "^2",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^6.0.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/google.accounts": "^0.0.2",
    "base64-js": "^1.5.1",
    "chevrotain": "^10.5.0",
    "hexy": "^0.3.4",
    "optionator": "^0.9.3",
    "prettier-plugin-svelte": "^3.4.0",
    "routify": "^2.0.1",
    "sirv-cli": "^2.0.0"
  },
  "routify": {
    "pages": "./frontend/pages",
    "dynamicImports": false
  }
}
